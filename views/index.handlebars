<h1>Eat Da Burger!</h1>


<img src="https://image.freepik.com/free-vector/cute-burger-cartoon-icon-illustration-food-icon-concept-isolated-flat-cartoon-style_138676-1437.jpg">

<div class="uneaten">
<ul class="uneaten-list">
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=false}}
    {{/unless}}
  {{/each}}
</ul>
 
</div>

<div class="eaten">
<ul class="eaten-list">
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/if}}
  {{/each}}
</ul>
</div>




<form class="create-form">
  <div class="form-group">
    <label for="ca">Burger Kind: </label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Add Da Burger</button>
</form>
