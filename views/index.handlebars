<h1>Eat Da Burger!</h1>


<div class="uneaten">
<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="eaten">
<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/if}}
  {{/each}}
</ul>
</div>




<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Kind: </label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Da Burger</button>
</form>
